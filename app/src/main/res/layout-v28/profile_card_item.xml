<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/drawer_item_effect"
    android:foregroundGravity="center"
    >

    <ImageView
        android:id="@+id/profile_item_image"
        app:layout_constraintWidth_percent="0.14"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        />

    <TextView
        app:layout_constraintStart_toEndOf="@id/profile_item_image"
        app:layout_constraintWidth_percent=".8"
        android:id="@+id/profile_item_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="start|bottom"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        />

    <TextView
        app:layout_constraintStart_toEndOf="@id/profile_item_image"
        app:layout_constraintWidth_percent=".8"
        android:id="@+id/profile_item_description"
        app:layout_constraintTop_toBottomOf="@id/profile_item_header"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="start|center"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="14sp"
        android:textColor="@color/purple_700"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>